<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="OneRoot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#EBFFFF</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnSecondary">@color/ic_launcher_background</item>
         Status bar color.
        <item name="android:statusBarColor" tools:targetApi="s">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <!-- to remove label from app -->
    <!-- https://www.youtube.com/watch?v=A9rcKZUm0zM  -->
    <style name="OneRoot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>